{
  "name": "mmf-blog-api-ts",
  "type": "module",
  "version": "1.0.0",
  "description": "mmf blog api server",
  "author": "lincenying &lt;lincenying@qq.com&gt;",
  "license": "MIT",
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "scripts": {
    "postinstall": "husky install",
    "tsc": "node src/init.js && tsc",
    "watch-tsc": "node src/init.js && tsc -w",
    "deploy": "node --experimental-specifier-resolution=node dist/app.js",
    "watch-deploy": "nodemon --watch ./dist --experimental-specifier-resolution=node dist/app.js",
    "serve": "concurrently \"nr watch-tsc\" \"nr watch-deploy\"",
    "start": "nr deploy",
    "lint": "eslint --ext .js ./server",
    "lint:fix": "eslint --ext .js ./server --fix"
  },
  "dependencies": {
    "axios": "^1.3.2",
    "baidu-aip-sdk": "^4.16.10",
    "base64-img": "^1.0.4",
    "cheerio": "^1.0.0-rc.12",
    "highlight.js": "^11.7.0",
    "jsonwebtoken": "^9.0.0",
    "lru-cache": "^9.1.1",
    "markdown-it": "^13.0.1",
    "markdown-it-toc-and-anchor": "^4.2.0",
    "md5": "^2.3.0",
    "mockjs": "^1.1.0",
    "moment": "^2.29.4",
    "mongoose": "^7.0.5",
    "mongoose-autopopulate": "^1.0.0",
    "multer": "^1.4.5-lts.1",
    "qiniu": "^7.8.0",
    "twig": "^1.16.0",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@lincy/eslint-config": "^1.1.1",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/markdown-it": "^12.2.3",
    "@types/md5": "^2.3.2",
    "@types/mockjs": "^1.0.7",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.16.2",
    "@types/serve-favicon": "^2.5.4",
    "compression": "^1.7.4",
    "concurrently": "^8.0.1",
    "connect-multiparty": "^2.2.0",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "ejs": "^3.1.8",
    "eslint": "^8.39.0",
    "express": "^4.18.2",
    "husky": "8.0.3",
    "lint-staged": "^13.1.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "serve-favicon": "^2.5.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "prettier"
      ]
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
