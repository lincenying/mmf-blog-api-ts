{
  "name": "mmf-blog-api-ts",
  "version": "1.0.1",
  "packageManager": "pnpm@10.6.2",
  "description": "mmf blog api server",
  "author": "lincenying &lt;lincenying@qq.com&gt;",
  "license": "MIT",
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0"
  },
  "scripts": {
    "hooks": "npx simple-git-hooks",
    "tsc": "tsc",
    "init:config": "tsx src/init.ts",
    "build": "npm run init:config && npm run tsc",
    "deploy": "node dist/app.js",
    "deploy-watch": "nodemon --delay 500ms --watch ./dist dist/app.js",
    "serve": "nodemon --watch ./src --exec tsx ./src/app.ts",
    "start": "npm run deploy",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@lincy/utils": "catalog:",
    "axios": "catalog:",
    "baidu-aip-sdk": "catalog:",
    "base64-img": "catalog:",
    "cheerio": "catalog:",
    "compression": "catalog:",
    "connect-multiparty": "catalog:",
    "cookie-parser": "catalog:",
    "dayjs": "catalog:",
    "express": "catalog:",
    "highlight.js": "catalog:",
    "jsonwebtoken": "catalog:",
    "lru-cache": "catalog:",
    "markdown-it": "catalog:",
    "markdown-it-toc-and-anchor": "catalog:",
    "md5": "catalog:",
    "mockjs": "catalog:",
    "mongoose": "catalog:",
    "mongoose-autopopulate": "catalog:",
    "morgan": "catalog:",
    "multer": "catalog:",
    "qiniu": "catalog:",
    "request-ip": "catalog:",
    "serve-favicon": "catalog:",
    "tslib": "catalog:",
    "twig": "catalog:"
  },
  "devDependencies": {
    "@lincy/eslint-config": "catalog:",
    "@types/compression": "catalog:",
    "@types/cookie-parser": "catalog:",
    "@types/express": "catalog:",
    "@types/jsonwebtoken": "catalog:",
    "@types/markdown-it": "catalog:",
    "@types/md5": "catalog:",
    "@types/mockjs": "catalog:",
    "@types/morgan": "catalog:",
    "@types/multer": "catalog:",
    "@types/node": "catalog:",
    "@types/request-ip": "catalog:",
    "@types/serve-favicon": "catalog:",
    "concurrently": "catalog:",
    "eslint": "catalog:",
    "jiti": "catalog:",
    "lint-staged": "catalog:",
    "nodemon": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsc-alias": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
