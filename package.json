{
  "name": "mmf-blog-api-ts",
  "version": "1.0.1",
  "packageManager": "pnpm@10.27.0",
  "description": "mmf blog api server",
  "author": "lincenying &lt;lincenying@qq.com&gt;",
  "license": "MIT",
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0"
  },
  "scripts": {
    "prepare[-del]": "npx simple-git-hooks",
    "tsc": "tsc",
    "init:config": "tsx src/init.ts",
    "build": "npm run init:config && npm run tsc",
    "deploy": "node dist/app.js",
    "deploy-watch": "nodemon --delay 500ms --watch ./dist dist/app.js",
    "serve": "nodemon --watch ./src --exec tsx ./src/app.ts",
    "start": "npm run deploy",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@lincy/utils": "^0.7.3",
    "axios": "^1.13.2",
    "baidu-aip-sdk": "^4.16.16",
    "base64-img": "^1.0.4",
    "cheerio": "1.0.0",
    "compression": "^1.8.1",
    "connect-multiparty": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "dayjs": "^1.11.19",
    "express": "^5.2.1",
    "highlight.js": "^11.11.1",
    "jsonwebtoken": "^9.0.3",
    "lru-cache": "^11.2.4",
    "markdown-it": "^14.1.0",
    "markdown-it-toc-and-anchor": "^4.2.0",
    "md5": "^2.3.0",
    "mockjs": "^1.1.0",
    "mongoose": "8.7.3",
    "mongoose-autopopulate": "^1.2.1",
    "morgan": "^1.10.1",
    "multer": "1.4.5-lts.1",
    "qiniu": "^7.14.0",
    "request-ip": "^3.3.0",
    "serve-favicon": "^2.5.1",
    "tslib": "^2.8.1",
    "twig": "^1.17.1"
  },
  "devDependencies": {
    "@lincy/eslint-config": "^6.3.3",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/markdown-it": "^14.1.2",
    "@types/md5": "^2.3.6",
    "@types/mockjs": "^1.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/request-ip": "^0.0.41",
    "@types/serve-favicon": "^2.5.7",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "simple-git-hooks": "^2.13.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks[-del]": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged[-del]": {
    "*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
