{
  "name": "mmf-blog-api-ts",
  "version": "1.0.0",
  "packageManager": "pnpm@8.6.1",
  "description": "mmf blog api server",
  "author": "lincenying &lt;lincenying@qq.com&gt;",
  "license": "MIT",
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0"
  },
  "scripts": {
    "postinstall": "sh simple-git-hooks.sh",
    "tsc": "tsc",
    "build": "esno src/init.ts && npm run tsc",
    "deploy": "node dist/app.js",
    "deploy-watch": "nodemon --delay 500ms --watch ./dist dist/app.js",
    "serve": "nodemon --watch ./src --exec esno ./src/app.ts",
    "start": "npm run deploy",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ts": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "baidu-aip-sdk": "^4.16.13",
    "base64-img": "^1.0.4",
    "cheerio": "^1.0.0-rc.12",
    "highlight.js": "^11.9.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.0.1",
    "markdown-it": "^13.0.2",
    "markdown-it-toc-and-anchor": "^4.2.0",
    "md5": "^2.3.0",
    "mockjs": "^1.1.0",
    "moment": "^2.29.4",
    "mongoose": "^7.6.1",
    "mongoose-autopopulate": "^1.0.1",
    "multer": "^1.4.5-lts.1",
    "qiniu": "^7.9.0",
    "twig": "^1.16.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@lincy/eslint-config": "^3.5.0",
    "@types/compression": "^1.7.3",
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.18",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/markdown-it": "^13.0.2",
    "@types/md5": "^2.3.3",
    "@types/mockjs": "^1.0.8",
    "@types/morgan": "^1.9.6",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.4",
    "@types/serve-favicon": "^2.5.5",
    "compression": "^1.7.4",
    "concurrently": "^8.2.1",
    "connect-multiparty": "^2.2.0",
    "cookie-parser": "^1.4.6",
    "eslint": "^8.51.0",
    "esno": "^0.17.0",
    "express": "^4.18.2",
    "lint-staged": "^14.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "serve-favicon": "^2.5.0",
    "simple-git-hooks": "^2.9.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "prettier"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
